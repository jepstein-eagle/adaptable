{
  "name": "@adaptabletools/adaptable-react-aggrid",
  "publishConfig": {
    "registry": "https://registry.adaptabletools.com"
  },
  "version": "4.0.1",
  "description": "React version of the powerful data-agnostic HTML5 datagrid add-on that sits on top of the agGrid component and provides all the rich functionality that advanced users expect from their DataGrids and Data Tables",
  "keywords": [],
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdaptableTools/adaptable.git",
    "directory": "packages/adaptable-react-aggrid"
  },
  "bugs": {
    "url": "https://github.com/AdaptableTools/adaptable/issues"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "node": ">=6.0.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "symlink-dir": "^3.1.1",
    "@babel/runtime-corejs2": "^7.4.4",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^22.0.0",
    "@types/node": "^10.0.3",
    "@types/react": "^16.8.10",
    "@zeit/next-sass": "^1.0.1",
    "chalk": "^3.0.0",
    "@ag-grid-community/all-modules": "23.2.1",
    "@ag-grid-community/react": "23.2.1",
    "babel-eslint": "^10.0.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "copyfiles": "^2.1.0",
    "coveralls": "^3.0.0",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.0",
    "jest": "^22.0.2",
    "lint-staged": "^7.1.3",
    "lodash.camelcase": "^4.3.0",
    "node-sass": "^4.12.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.17.0",
    "prompt": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "@ag-grid-community/all-modules": "^23.2.1",
    "@ag-grid-community/react": "^23.2.1"
  },
  "scripts": {
    "pretty": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,scss}\" --fix",
    "registry-publish": "npm run build-package-json && npm publish dist",
    "registry-publish-canary": "npm run build-package-json && npm publish --tag canary dist",
    "clean-deps": "rimraf yarn.lock && rimraf package-lock.json && rimraf node_modules && npm i",
    "build": "npm run clean-deps && rimraf dist && npm run build-prod-no-cleanup",
    "build-prod-no-cleanup": "npm run before-build && npm run tsc && npm run build-package-json && npm run sass && npm run copy-assets && npm run after-build",
    "build-package-json": "node ../../scripts/cli/update-package --module=packages/adaptable-react-aggrid",
    "before-build": "npm run ensure-clean-on-local",
    "after-build": "",
    "ensure-clean-on-local": "node ../../scripts/ensure-clean-on-local",
    "link-core": "rimraf node_modules/@types/react-native && rimraf node_modules/@adaptabletools && symlink-dir ../adaptable ./node_modules/@adaptabletools/adaptable",
    "tsc": "npm run link-core && npm run tsc-only",
    "tsc-only": "tsc --outDir dist",
    "sass": "node-sass ./src/index.scss ./dist/index.css && ../../node_modules/.bin/postcss ./dist/index.css --config ../../ --output ./dist/index.css && node-sass ./src/base.scss ./dist/base.css && ../../node_modules/.bin/postcss ./dist/base.css --config ../../ --output ./dist/base.css && node-sass ./src/themes/light.scss ./dist/themes/light.css && ../../node_modules/.bin/postcss ./dist/themes/light.css --config ../../ --output ./dist/themes/light.css && node-sass ./src/themes/dark.scss ./dist/themes/dark.css && ../../node_modules/.bin/postcss ./dist/themes/dark.css --config ../../ --output ./dist/themes/dark.css",
    "copy-assets": "cp -R ./src/fonts ./dist/fonts/ && cp README.md ./dist"
  }
}
