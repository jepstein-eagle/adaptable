{
  "extends": "../adaptable/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "adaptable-angular-aggrid": [
        "dist/adaptable-angular-aggrid"
      ],
      "adaptable-angular-aggrid/*": [
        "dist/adaptable-angular-aggrid/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../adaptable/src/**/*",
  ],
  "exclude": ["src/test.ts", "src/**/*.spec.ts",
    "../adaptable/parser/**/*.test.ts",
    "../adaptable/parser/playground",
  ]
}
